@model IEnumerable<GuideMe.Models.User>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 20px;
            background: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            position: relative;
        }

        h1 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table thead {
            background-color: #34495e;
            color: #ffffff;
        }

        table th,
        table td {
            text-align: left;
            padding: 15px;
            border: 1px solid #ddd;
        }

        table th {
            font-weight: bold;
            font-size: 16px;
        }

        table tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        table tr:hover {
            background-color: #e8eaf6;
        }

        img {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 50%;
        }

        span {
            color: #7f8c8d;
            font-style: italic;
        }

        .edit-form {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 400px;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            box-sizing: border-box;
            max-width: 100%;
        }

        .edit-form h3 {
            text-align: center;
            color: #34495e;
            margin-bottom: 20px;
        }

        .edit-form .form-group {
            margin-bottom: 15px;
            display: flex;
            flex-direction: column;
        }

        .edit-form label {
            font-size: 14px;
            color: #34495e;
            margin-bottom: 5px;
        }

        .edit-form input,
        .edit-form button {
            width: 100%;
            padding: 12px;
            margin: 5px 0;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .edit-form input[type="file"] {
            padding: 10px;
        }

        .edit-form button {
            background-color: #34495e;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .edit-form button:hover {
            background-color: #2c3e50;
        }

        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }
    </style>


</head>
<body>
    <div class="container">
        <h1>User List</h1>
        <table>
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Password</th>
                    <th>User Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>@user.Password</td>
                        <td>
                            @if (!string.IsNullOrEmpty(user.UserImage))
                            {
                                <img src="@user.UserImage" alt="User Image" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        <td>
                            <button type="button" onclick="openForm(@user.UserId)">Edit</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div id="overlay" class="overlay" onclick="closeForm()"></div>

    @foreach (var user in Model)
    {
        <div id="edit-form-@user.UserId" class="edit-form">
            <form asp-action="UpdateUser" asp-controller="Admin" method="post" enctype="multipart/form-data">
                <h3>Edit User</h3>
                <input type="hidden" name="UserId" value="@user.UserId" />

                <label for="Name">Name</label>
                <input type="text" name="Name" value="@user.Name" required />

                <label for="Email">Email</label>
                <input type="email" name="Email" value="@user.Email" required />

                <label for="UserFile">User Image</label>
                <input type="file" name="UserFile" />

                <button type="submit">Update</button>
            </form>
        </div>
    }

    <script>
        function openForm(userId) {
            document.getElementById(`edit-form-${userId}`).style.display = 'block';
            document.getElementById('overlay').style.display = 'block';
        }

        function closeForm() {
            var forms = document.getElementsByClassName('edit-form');
            for (var i = 0; i < forms.length; i++) {
                forms[i].style.display = 'none';
            }
            document.getElementById('overlay').style.display = 'none';
        }
    </script>
</body>
</html>
